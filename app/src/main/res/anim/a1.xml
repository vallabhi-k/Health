<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <alpha
        android:fromAlpha="1.0"
        android:toAlpha="0"
        android:duration="3000"
        ></alpha>

    <translate
        android:fromYDelta="100%"
        android:toYDelta="0%"
        android:duration="3000"
        ></translate>

    <rotate
        android:fromDegrees="0"
        android:toDegrees="360"
        android:pivotX="50%"
        android:pivotY="50%"

        android:duration="3000"
        ></rotate>
</set>